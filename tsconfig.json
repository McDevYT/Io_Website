{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./",               
    "outDir": "./dist",            

    "moduleResolution": "node"
  },
  "include": ["server/src/**/*.ts", "app/src/**/*.ts"],  
  "exclude": ["node_modules", "dist"]
}
